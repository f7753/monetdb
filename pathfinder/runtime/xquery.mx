 */
void  seqEmitDbl(XqueryCtx* ctx, dbl dv) {
        if ( ctx->saxMode ) {
                char buff[32];

                sprintf(buff,"%f",dv);
                handle_characters(ctx,buff);
        } else {
                ctx->nAttrOnLine++;
                stream_printf(GDKout,"%f ",dv);
        }
}

/**
 * Emit a String element of an XQUERY/Pathfinder result sequence
 */
void  seqEmitStr(XqueryCtx* ctx, str sv) {
