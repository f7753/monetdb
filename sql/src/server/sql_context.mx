typedef struct context {
	int cur;
	int prev;	/* previous token lr(1) is to restrictive for SQL */

	int yyval;
	char *yytext;
	int yylen;
	int yysize;
	int debug;

	char *sql;
	int sqllen;
	int sqlsize;
	int key;

	int lineno;
	char *buf;
	buffer *outbuf;
	stream *out;

	int status; 	/* sql error code */
	char errstr[ERRSIZE];
	struct  mvc *mvc;
	struct  qc  *qc;

	char 	auth;	/* authorization */
	int 	authid; /* authorization id */

	list 	*params;
	list 	*args;
	struct symbol *sym;
} context;

