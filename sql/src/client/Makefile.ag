## Process this file with automake to produce Makefile.in

INCLUDES = \
	-I$(MONET_PREFIX)/include \
	-I$(MONET_PREFIX)/include/gdk \
	-I$(MONET_PREFIX)/include/monet \
	-I$(MONET_PREFIX)/include/plain \
	-I$(MONET_PREFIX)/include/stream \
	-I${top_srcdir}/src/common \
	-I${top_builddir}/src/common \
	$(GETOPT_INCS)

lib__sql = {
	SOURCES = sql.m sql_module.c catalog_module.c statement_dump.c
	LIBS = ../common/libsql \
		-L$(MONET_PREFIX)/lib/Monet 
}

bin_sql_client = {
	SOURCES = sql_client.c catalog_client.c statement_dump.c \
		  comm.c comm.h gdk.c 
	LIBS = ../common/libsql \
		-L$(MONET_PREFIX)/lib/Monet -lstream \
			$(READLINE_LIBS) $(GETOPT_LIBS)
}
