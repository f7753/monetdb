#!/bin/sh

builddir=@QMONET_BUILD@
# make sure srcdir contains absolute path name
srcdir=`cd '@srcdir@'; pwd`

# where compiled modules are to be found
MOD_PATH="${builddir}/src/modules/plain/.libs:${builddir}/src/modules/contrib/.libs:${builddir}/src/modules/calibrator/.libs:${builddir}/src/mapi/.libs"

if [ "${LD_LIBRARY_PATH}" ] ; then
	LD_LIBRARY_PATH=":${LD_LIBRARY_PATH}"
fi

# enhance various paths to find our stuff
PATH="${builddir}/src/testing:${builddir}/src/tools:${builddir}/src/mapi/clients:$PATH"
PYTHONPATH="${builddir}/src/testing:${srcdir}/src/testing:${builddir}/src/common:${srcdir}/src/mapi/clients"
LD_LIBRARY_PATH="${MOD_PATH}:${builddir}/src/common/.libs:${builddir}/src/gdk/.libs:${builddir}/src/mapi/clients/.libs:${builddir}/src/modules/plain/stream/.libs:${builddir}/src/monet/.libs${LD_LIBRARY_PATH}"
export PATH PYTHONPATH LD_LIBRARY_PATH

# execute Mtest.py in the source directory
cd "$srcdir"

# execute the script
# if no arguments, do a recursive test (Mtest.py -r), else pass on the arguments
exec python "${builddir}/src/testing/Mtest.py" --monet_mod_path="${MOD_PATH}" --config="${builddir}/conf/monet.conf" --dbfarm="${builddir}/dbfarm" --TSTTRGBASE="${builddir}" "${@--r}"
