@f ListIterator
@a Niels Nes

@h
#ifndef _LISTITERATOR_H_
#define _LISTITERATOR_H_

class ListIterator {
    public:
	ListIterator( void **base, int nr )
	{
	  _base = base;
	  _nr = nr;
	  _cur = 0;	
 	}

	int next( void** obj )
	{
		if (_cur < _nr) {
			*obj = _base[_cur++];
			return 1;
		}
		return 0;
	}

    private:
	void**_base;
	int _nr;
	int _cur;
};


#endif // _LISTITERATOR_H_











