@f monet-config
@sh
#!@BASH@

pkg=@PACKAGE@
source=@MONET_SOURCE@
build=@MONET_BUILD@
prefix=@prefix@
exec_prefix=@exec_prefix@

bindir=@bindir@
libexecdir=@libexecdir@
datadir=@datadir@
sysconfdir=@sysconfdir@
localstatedir=@localstatedir@
libdir=@libdir@
infodir=@infodir@
mandir=@mandir@
includedir=@includedir@

pkglibdir=${libdir}/${pkg}
pkgdatadir=${datadir}/${pkg}
pkgincludedir=${includedir}/${pkg}

usage()
{
    cat <<EOF
Usage: monet-config [OPTION]

Known values for OPTION are:

  --prefix[=DIR]	print/change monet prefix [default $prefix]
  --build		print monet build directory
  --source		print monet source directory
  --libs		print Monet module linking information
  --cflags		print Monet module pre-processor and compiler flags
  --modpath             print default Monet module directory
  --help		display this help and exit
  --version		output version information

Install directories ${pkg} was configured to
  --prefix  --exec-prefix  --bindir  --libexecdir  --datadir
  --sysconfdir  --localstatedir  --libdir  --infodir
  --mandir  --includedir --pkgdatadir --pkglibdir --pkgincludedir

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --prefix=*)
	prefix=$optarg
	;;

    --prefix)
	echo $prefix
	;;

    --build)
	echo $build
	;;

    --source)
	echo $source
	;;

    --version)
	echo @VERSION@
	exit 0
	;;

    --*dir)
        dirname=\$`echo $1 | sed -e 's,^--,,'`
        dirname=`eval echo $dirname`
        test -z "$dirname" && exit 1
        echo $dirname
        exit 0
        ;;

    --help)
	usage 0
	;;

    --cflags)
       	echo -I$prefix -I$prefix/include -I$prefix/include/common -I$prefix/include/gdk -I$prefix/include/monet -I$prefix/include/plain
       	;;

    --libs)
       	echo -L$prefix/lib/@PACKAGE@
       	;;

    --modpath)
        echo $prefix/lib/@PACKAGE@
        ;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
