int mapi_setError(Mapi mid, char *msg, char *action){
	assert(mid);
	assert(msg);
	char *c= (char*) malloc(strlen(msg)+1);
	strcpy(c,msg);
	if( mid->errorstr) free(mid->errorstr);
	mid->error = MERROR;
	mid->errorstr = c;
	mid->action = action;
	return mid->error;
}
void mapi_clrError(Mapi mid){
	if( mid->error){
		if(mid->errorstr) free(mid->errorstr);
		mid->action=0;
		mid->error=0;
	}

}
Mapi mapi_new() {
	Mapi m;
