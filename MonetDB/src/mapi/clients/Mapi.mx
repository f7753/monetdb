	m->trace = 0;
	m->everything = 1;
	m->error= MOK;
	m->errorstr= 0;
	strcpy(m->hostname,"localhost");
	strcpy(m->language,"mal");
	m->languageId= LANG_MAL;
	strcpy(m->username,"anonymous");
	strcpy(m->password,"unknown");
	/* default prompt */
	strcpy(m->prompt,">");

	m->maxfields = 64;
	m->fieldcnt = 0;
	m->fields = (MapiField *) malloc( 64 * sizeof(MapiField));
	memset(m->fields,0, 64 * sizeof(MapiField));
	assert(m->fields);
	m->cache.rowlimit= 100;
	m->cache.limit= 0;
	m->cache.writer= 0;
	m->cache.reader= -1;
	m->cache.tuples= 0;
	m->cache.rows= 0;
	m->cache.anchors= 0;
	m->cache.fldcnt= 0;
	m->tracelog= 0;
