void promptMonet(Mapi mid) {
        int i=0;
	char c,*s;

	assert(mid);
	if( mid->trace) printf("promptMonet:");
	s= strchr(mid->blk.buf+mid->blk.nxt,'\n');
	assert(s);
	*s = 0;
	i= s-(mid->blk.buf+mid->blk.nxt);
	if( i < NAMELEN-1) strncpy(mid->prompt,mid->blk.buf+mid->blk.nxt,i+1);
	mid->blk.nxt += i+1;
	mid->active = 0;
	if( mid->trace) printf("%s\n",mid->prompt);
}

@
Disconnection from the server leads to removal of the
Mapi structure. Subsequent access may lead to a crash.
@c
MapiMsg mapi_disconnect(Mapi mid) {
	int i;
	assert(mid);
	mapi_check(mid,mid->error,"mapi_disconnect");
	for(i=0;i<mid->cache.writer;i++){
		if( mid->cache.rows[i]) free( mid->cache.rows[i]);
		if( mid->cache.anchors[i]) free( mid->cache.anchors[i]);
	}
	if(mid->cache.fldcnt) (void) free(mid->cache.fldcnt);
	if(mid->cache.anchors) (void) free(mid->cache.anchors);
	if(mid->cache.rows) (void) free(mid->cache.rows);
	if( mid->connected >1){
		mid->connected=0;
		return mapi_setError(mid,"Warning: multiple connections open",
					"mapi_disconnect");
	}
	(void) mid->from->close(mid->from);
	(void) mid->to->close(mid->to);
	return mapi_setError(mid,"Connection closed", "mapi_disconnect");
}
