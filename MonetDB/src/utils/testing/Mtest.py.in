def Check(command, input) :
	pOut,pIn,pErr = popen2.popen3(command+" || echo ! Exit 1")
	pIn.write(input)
	pIn.close()
	qOut = pOut.readlines()
	qErr = pErr.readlines()
	rOut = pOut.close()
	rErr = pErr.close()
	rOutErr = ( rOut or rErr )
	if not rOutErr:
		for l in qOut+qErr:
			if l[0] == "!":
				rOutErr = 1
	if rOutErr:
		ErrMsg("'"+command+"` failed:")
		if qOut[-1][:8] == "! Exit 1":
			qErr.append(qOut.pop())
		for l in qOut+qErr:
			STDERR.write(l)
		STDERR.write("\n")
		STDERR.flush()
		#sys.exit(1)
	return rOutErr

def CheckExec(cmd) :
	for p in string.split(os.environ['PATH'],os.pathsep):
		x = isexecutable(p+os.sep+cmd)
		if x[0]:
			return p+os.sep+cmd+x[1]
	return ""

