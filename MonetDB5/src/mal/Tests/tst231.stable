#	printf("after mirror assignment refcount =%d\n",i);
#
function Admin.main():int;	# 0  (main:int)
    b := bbp.new(int:,str:);	# 1 CMDBATnew (b:bat[:int,:str])<-($2:int)($3:str)
    i := bbp.getBATrefcnt(b);	# 2 CMDgetBATrefcnt (i:int)<-(b:bat[:int,:str])
    io.printf("refcount =%d\n",i);	# 3 SYSprint_formatted_int ($5:int)<-($6:str)(i:int)
    bat.insert(b,1,"bat B");	# 4 BKCinsert_bun ($7:void)<-(b:bat[:int,:str])($8:int)($9:str)
    io.print(b);	# 5 CMDprint_val ($10:int)<-(b:bat[:int,:str])
    i := bbp.getBATrefcnt(b);	# 6 CMDgetBATrefcnt (i:int)<-(b:bat[:int,:str])
    io.printf("refcount =%d\n",i);	# 7 SYSprint_formatted_int ($11:int)<-($6:str)(i:int)
    b6 := bat.mirror(b);	# 8 BKCmirror (b6:bat[:int,:int])<-(b:bat[:int,:str])
    i := bbp.getBATrefcnt(b);	# 9 CMDgetBATrefcnt (i:int)<-(b:bat[:int,:str])
    io.printf("after mirror assignment refcount =%d\n",i);	# 10 SYSprint_formatted_int ($13:int)<-($14:str)(i:int)
end main;	# 11  
