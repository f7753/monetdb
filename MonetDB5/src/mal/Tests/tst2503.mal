# The prototypical factory construct

factory random(seed:int):int;
	i:= seed;
barrier always:= true;
	i:= 125 *i;
	i:= i % 32767;
	yield i;
	redo always;
exit always;
end;

r1:= random(1);
print(r1);
r2:= random(34);
print(r2);
r2:= random(2);
print(r2);
r2:= random(2);
print(r2);
r2:= random(2);
print(r2);
