# a test checking BAT reference counting under various situations
function steal(bb:bat[:any$1,:any$2]) :bat[:any$1,:any$2];
	i:= getRefCount(bb);
	printf("enter function refcount =%d\n",i);

	loc:= bb;
	i:= getRefCount(bb);
	printf("local in function refcount =%d\n",i);

	return bb;
end steal; 

