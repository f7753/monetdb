#Parsing properties and keeping them around
function add(i:int{read=true},j:int{read=true}):int{write=true,safe=true};
	j:= j+i;
	return j{freeze=true};
end add;

function add2(i:int,j:int{read=true}):int{write=true,safe=true};
	k:= j+i;
	return k{freeze=true};
end ;

