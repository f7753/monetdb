@c
str fcnClass(InstrPtr p){
	if( p->token== FUNCTIONsymbol)
		return "function"; 
	if( p->token== STREAMsymbol)
		return "stream"; 
	if( p->token == COMMANDsymbol)
	 	return "command";
	if( p->token == PATTERNsymbol)
		return "pattern";
	return "handler ";
}
str fcnDefinition(MalBlkPtr mb,InstrPtr p, str s,int flg ){
	int i;
	str t,tpe,pstring;
	PropertySet ps =0;

	t=s;
	@:performanceData@
	sprintf(t,"%s ",fcnClass(p));

	advance(t);
	if( p->modname) sprintf(t,"%s.",p->modname);
	advance(t);
	sprintf(t,"%s(",p->fcnname);
	for(i=p->retc;i<p->argc;i++){ @:showParam(argc)@ }
	advance(t);
	if( p->varargs) sprintf(t,"...");
	advance(t);
	if( p->retc ==1){
		tpe= malTypeName(getArgType(mb,p,0));
		sprintf(t,"):%s",tpe);
		GDKfree(tpe);
		advance(t);
	} else {
		sprintf(t,"):("); t+= 3;
		for(i=0;i<p->retc;i++){ @:showParam(retc)@ }
		*t++ = ')';
	}
	if(mb->binding)
		sprintf(t," = %s;",mb->binding);
	else	sprintf(t,";");
#ifdef DEBUG_MAL_INSTR
	if( flg & (LIST_MAL_BIND | LIST_MAL_TYPE)){
		advance(t);
		hiddenInstructionArgs(mb,p,t);
	}
#endif
	return s;
}

@-
@= tabulate
	for(;tab>0;tab--) *t++= ' ';
	*t= 0;
	advance(t);
@-
Variables and MAL blocks, and instructions can be associated with a 
property list. At least for debugging purposes, the latest known value
should be displayed.
