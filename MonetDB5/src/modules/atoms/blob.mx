int BLOBfromstr(char* instr,int* l,blob** val)
{
   int i;
   int nitems;
   int nbytes;
   blob *result;
   char* s = instr;

   s = strchr(s,'(');
   if (s == NULL)
   {
      if(strcmp(instr,"nil")==0) *val = (blob*) NULL;
      else {
	GDKwarning("Missing ( in blob literal string\n");
	*val = (blob*)NULL;
      }
      return(0);
   }
   nitems = (int) strtol(s + 1,&s,10);
   nbytes = blobsize(nitems);
   if (s == NULL)
   {
      GDKwarning("Missing nitems in blob\n");
      *val = (blob *)NULL;
      return(0);
   }

#if SIZEOF_SIZE_T > SIZEOF_INT
   if (nitems > 0x7fffffff) {
      GDKwarning("Blob too large\n");
      *val = (blob *)NULL;
      return(0);
   }
#endif

   s = strchr(s,':');
   if (s == NULL)
   {
      GDKwarning("Missing ':' in blob\n");
      *val = (blob *)NULL;
      return(0);
   }
   ++s;

   if (*val == (blob* )NULL)
   {
      *val = (blob *)GDKmalloc(nbytes);
      *l = nbytes;
   }
   else if (*l < nbytes)
   {
      GDKfree(*val);
      *val = (blob *)GDKmalloc(nbytes);
      *l = nbytes;
   }
   result = *val;
   result->nitems = nitems;

   /*
   // Read the values of the blob.
   */
   for (i = 0;i < nitems; ++i)
   {
      result->data[i] = (char) strtol(s,&s,16);
      if (s == 0)
      {
	 GDKerror("blob too short \n");
	 break;
      }
   }

   s = strchr(s,')');
   if (s == 0)
   {
      GDKerror("Missing ')' in blob\n");
   }

   return s-instr;
}

