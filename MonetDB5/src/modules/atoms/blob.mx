size_t blobsize(int nitems)
{
   if (nitems <0)
      nitems = 0;
   return (sizeof(int)+nitems);
}

void BLOBput(Heap* h,int* bun,blob* val)
{
   char* base;

   *bun  = HEAP_malloc(h,blobsize(val->nitems));
   base = h->base;
   memcpy(&base[*bun],(char *)val,blobsize(val->nitems));
}

int BLOBget(Heap* h,int* bun,int* l,blob** val)
{
   blob* from = HEAP_index(h,*bun,blob);
   int size = blobsize(from->nitems);

   if (*val == NULL)
   {
      *val = (blob *)GDKmalloc(size);
      *l = size;
   }
   else if (*l < size)
   {
      GDKfree(*val);
      *val = (blob *)GDKmalloc(size);
      *l = size;
   }
   memcpy(*val,from,size);

   return (size);
}

int BLOBnequal(blob* l,blob*  r)
{
   int len;
   int i;
   if (l->nitems != r->nitems)
      return(1);

   len = l->nitems;

   if (len == -1)
      return(0);

   for(i=0;i<len;++i)
   {
      if (l->data[i] != r->data[i])
	 return(1);
   }
   return(0);
}

void BLOBdel(Heap* h,int* index)
{
   HEAP_free(h,*index);
}

int BLOBhash(blob* b)
{
   return(b->nitems);
}

blob *BLOBnull()
{
   static blob nullval;
   nullval.nitems = -1;
   return(&nullval);
}

void BLOBconvert( blob *b, int direction){
	(void) direction; /* fool compiler */
	b->nitems = normal_int_SWAP(b->nitems);
}

int BLOBlength(blob* p)
{ return(blobsize(p->nitems)); }


int BLOBheap(Heap* heap, size_t capacity)
{
   HEAP_initialize(heap,capacity,0,4);
   return 0;
}

int BLOBnitems(int *ret,blob *b) {
     *ret = b->nitems;
     return GDK_SUCCEED;
}

