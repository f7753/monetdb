str BLOBfromidx(str *retval, blob **binp, int *index){
	blob *b = *binp;
	str s, p = b->data + *index; 
	str r, q = b->data + b->nitems;
	for(r=p; r<q; r++) {
		if (*r == 0) break; 
	}
	*retval = s = (str) GDKmalloc(1+r-p);
	for(; p<r; p++, s++) 
		*s = *p;  
	*s = 0;
	return MAL_SUCCEED;
}

str fromblob(str *retval, blob **b){
	int zero = 0;
	return BLOBfromidx(retval, b , &zero);
}

str toblob(blob **retval, str *s){
	int len = strLen(*s); 	
	blob *b = (blob*) GDKmalloc(sizeof(int) + len);
	b->nitems = len;
	memcpy(b->data, *s, len);
	*retval = b;
	return MAL_SUCCEED;
}
