@f monet-config
@sh
#!@BASH@

pkg=@PACKAGE@
source=@MONET_SOURCE@
build=@MONET_BUILD@
prefix=@prefix@
exec_prefix=@exec_prefix@

bindir=@bindir@
libexecdir=@libexecdir@
datadir=@datadir@
sysconfdir=@sysconfdir@
localstatedir=@localstatedir@
libdir=@libdir@
infodir=@infodir@
mandir=@mandir@
includedir=@includedir@

pkglibdir=${libdir}/${pkg}
pkgdatadir=${datadir}/${pkg}
pkgincludedir=${includedir}/${pkg}

usage()
{
    cat <<EOF
Usage: monet-config [OPTION]

Known values for OPTION are:

  --build		print monet build directory
  --source		print monet source directory
  --libs		print Monet module linking information
  --cflags		print Monet module pre-processor and compiler flags
  --modpath             print default Monet module directory
  --classpath		print default Monet CLASSPATH
  --help		display this help and exit
  --version		output version information

Install directories ${pkg} was configured to
  --prefix  --exec-prefix  --bindir  --libexecdir  --datadir
  --sysconfdir  --localstatedir  --libdir  --infodir
  --mandir  --includedir --pkgdatadir --pkglibdir --pkgincludedir

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in

    --prefix)
	echo $prefix
	;;

    --exec-prefix)
	echo $exec-prefix
	;;

    --build)
	echo $build
	;;

    --source)
	echo $source
	;;

    --version)
	echo @VERSION@
	exit 0
	;;

    --*dir)
        dirname=\$`echo $1 | sed -e 's,^--,,'`
        dirname=`eval echo $dirname`
        test -z "$dirname" && exit 1
        echo $dirname
        exit 0
        ;;

    --help)
	usage 0
	;;

    --includes)
       	echo \
		-I\${MONET_INCLUDEDIR} \
		-I\${MONET_INCLUDEDIR}/common \
		-I\${MONET_INCLUDEDIR}/gdk \
	  	-I\${MONET_INCLUDEDIR}/mal \
	  	-I\${MONET_INCLUDEDIR}/kernel \
	  	-I\${MONET_INCLUDEDIR}/atoms \
	  	-I\${MONET_INCLUDEDIR}/C 
       	;;

    --cflags)
       	echo \
		-I$includedir \
		-I$includedir/common \
		-I$includedir/gdk \
		-I$includedir/mal \
		-I$includedir/kernel \
		-I$includedir/atoms \
		-I$includedir/C 
       	;;

    --libs)
       	echo \
		-L$libdir \
		-L$pkglibdir
       	;;

    --modpath)
        echo 	$pkglibdir
        ;;

    --classpath)
        echo 	$pkglibdir/mapi.jar
        ;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
